//- pagination
ul.pagination
    li.page-item
        a.page-link(href="#")
            i.fa.fa-chevron-left
    li.page-item.active
        a.page-link(href="#") 1
    li.page-item
        a.page-link(href="#") 2
    li.page-item
        a.page-link(href="#") 3
    li.page-item.disabled
        a.page-link(href="#") ...
    li.page-item
        a.page-link(href="#") 6
    li.page-item
        a.page-link(href="#")
            i.fa.fa-chevron-right
//- end pagination