.sidebar
    ul.list-group.profile-photo.sidebar-widget
        li.list-group-item.list-group-item__header
            img(src="img/profile-photo.jpg", alt="")

    //- profile
    ul.list-group.profile-sidebar.sidebar-widget
        li.list-group-item.list-group-item__header
            .header Обо мне
            .border
        - var items = {'мой профиль': '', "мои сообщения": '', "команды": '', "мои тренировки": 'trains.html', "нстройки": '', "стать тренером": '', "пригласить друга": '', "помощь": ''}

        each item, index in items
            li.list-group-item 
                a(href= item).roboto-bold.text-uppercase= index
    //- profile

    //- favorites
    ul.list-group.profile-sidebar.sidebar-widget
        li.list-group-item.list-group-item__header
            .header Избранное
            .border
        - var items = ["Фитнес", "йога", "футбол", "баскетбол"]

        each item in items
            li.list-group-item 
                a(href="#").roboto-bold.text-uppercase= item
    //- end favorites


    //- search
    ul.list-group.search-sidebar.sidebar-widget
        li.list-group-item.list-group-item__header
            .header Поиск
            .border
        li.list-group-item.no-border-change 
            .input-group-search
                input.form-control(type="text", name="search", placeholder="Поиск...")
                div.search
                    i.fa.fa-search
    //- end search
//- end profile sidebar
//- end prodile left column